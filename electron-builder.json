{
  "appId": "com.xiaohongshu.autopublish",
  "productName": "小红书自动发布插件",
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "files": [
    "dist/main/**/*",
    "dist/renderer/**/*",
    "node_modules/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ]
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ]
  }
}
