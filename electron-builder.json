{
  "appId": "com.xiaohongshu.autopublish",
  "productName": "小红书自动发布插件",
  "directories": {
    "buildResources": "assets",
    "output": "release"
  },
  "files": [
    "dist/main/**/*",
    "dist/renderer/**/*",
    "node_modules/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "dir",
        "arch": ["x64"]
      }
    ],
    "signAndEditExecutable": false
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ]
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ]
  }
}
